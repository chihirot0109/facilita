<h1><%= @event.title %></h1>

<p><%= @event.description %></p>

<!-- Photo for later -->
<% if @project.photo.attached? %>
<div class="img-div">
  <%= cl_image_tag @project.photo.key, height: 400, width: 500, crop: :fill %>
</div>
<% end %>

<!-- Link to the creator -->
<%= link_to @event.user.username, user_path(@event.user) %>



