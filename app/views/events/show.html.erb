<div class="banner-red event-banner">
  <% if @event.photo.attached? %>
    <%= cl_image_tag @event.photo.key, class: "banner-image" %>
  <% end %>
</div>


<div class="container event-container">
  <div class="event-info">
    <div class="description">
      <h1><%= @event.title %></h1>
      <p><%= @event.description %></p>
    </div>
    <div class="organizer">
      <h2>Organizer</h2>
      <h3>
        <%= link_to "ðŸŽ¤ #{@event.user.first_name} #{@event.user.last_name}", user_path(@event.user) %>
      </h3>
      <% if @event.user == current_user %>
        <h5>Event code â™¯ <%= @event.token %></h5>
      <% end %>
    </div>
  </div>
  <div class="event-info">
    <div class="description">
<!--    LOCATION & EVENT DATE & TIME -->
    </div>
    <div class="organizer user">
      <h4>Location: <%= @event.location %></h4>
      <p><%= @event.start_time.strftime("%m/%d/%Y") %></p>
      <p><%= @event.start_time.strftime("%I:%M%p")  %><%= @event.end_time.strftime(" - %I:%M%p")  %></p>
      <p><%= @event.users.count %> attendees</p>
    </div>
  </div>
</div>

<!-- Photo for later -->
<% if @event.user == current_user %>
<%= link_to "Edit event", edit_event_path %>
<% end %>
