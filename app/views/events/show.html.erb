<div class="banner-white">
  <div class="container">
    <p><%= @event.start_time.strftime("%B %d, %Y") %>
    <%= @event.start_time.strftime("%I:%M%p")  %><%= @event.end_time.strftime(" - %I:%M%p")  %></p>
    <div id="title-code">
      <h1><%= @event.title %></h1>
      <h2 class="text-red">Code: <%= @event.token %></h2>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <div id="organizer">
        <div class="d-flex justify-content-between align-items-center">
          <% if @event.user.photo.attached? %>
            <%= cl_image_tag @event.user.photo.key, class: "avatar" %>
          <% else %>
            <%= image_tag "avatar.svg", class: "avatar" %>
          <% end %>
          <div>
            <small>Hosted by</small>
            <p><%= @event.user.first_name %> <%= @event.user.last_name %></p>
          </div>
        </div>
      </div>
      <p><%= @event.users.count %> attendees</p>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <small>@<%= @event.location %></small>
      <% if @event.user == current_user %>
        <small><%= link_to "Check summary", event_summary_path(@event), class: "btn btn-outline-danger" %></small>
      <% end %>
    </div>
            <% if @event.user == current_user %>
      <small><%= link_to "Edit event", edit_event_path(@event), class: "text-red link" %></small>
      <% end %>
  </div>
</div>

<% unless @event.user == current_user %>
  <%= render 'event_content', event: @event %>
<% end %>

  <%# if DateTime.now.change(:offset => "+0000") >= @event.start_time && DateTime.now.change(:offset => "+0000") <= @event.end_time %>
<div class="footer">
  <%= render 'shared/footer', event: @event, message: @new_message, question: @new_question  %>
</div>
  <%# end %>

