<div class="container">
  <h1>Questions</h1>
  <div id="questions">
    <% event.questions.each do |question| %>
        <div class="card">
          <p id="question-"><%= question.id %></p>
          <h5><%= question.user.first_name %></h5>
          <%= question.content %>
        </div>
    <% end %>
  </div>
  <%= simple_form_for([event, question], remote: true) do |f| %>
    <%= f.input :content %>
    <%= f.submit 'ask' %>
  <% end %>
</div>
