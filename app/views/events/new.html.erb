
<div class="container d-flex justify-content-around">
  <div class="new-project-card p-3 mb-4 mt-4">
<h1>Create a New Event</h1>

<%= simple_form_for(@event) do |f| %>
    <span class="form-name"><%= f.input :title, label: "Event Name" %></span>
    <span class="form-description"><%= f.label :title, "Example: JavaScript for Beginners" %></span>
    <span class="form-name"><%= f.input :description, required: true, label: "Event Details", :input_html => {:rows => 10, } %></span>
    <span class="form-description"><%= f.label :description, "A detailed description of your event's content." %></span>
    <span class="form-name"><%= f.input :location, label: "Location" %></span>
    <span class="form-description"><%= f.label :location, "Example: 2 Chome-11-3 Meguro, Meguro City, Tokyo 153-0063" %></span>
    <span class= "form-date">
      <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
    </span>
    <span class="form-name"><%= f.input :photo, as: :file %></span>
<div class="container d-flex justify-content-around">
<%= f.submit "Create your event", class: "btn btn-new" %>
</div>
  <% end %>
</div>
</div>
