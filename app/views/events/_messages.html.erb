<div class="container">
  <h1>Messages</h1>
  <div id="messages">
    <% event.messages.each do |message| %>
        <div class="card">
          <p id="message-"><%= message.id %></p>
          <h5><%= message.user.first_name %></h5>
          <%= message.content %>
        </div>
      <% end %>
  </div>
  <%= simple_form_for([event, message], remote: true) do |f| %>
    <%= f.input :content %>
    <%= f.submit 'comment' %>
  <% end %>
</div>

