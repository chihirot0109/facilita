<div class="event-container event-parent">
  <% if event.photo.attached? %>
    <%= cl_image_tag event.photo.key, class: "event-uploaded-image" %>
  <% else %>
    <%= image_tag "festival.svg", class: "event-uploaded-image" %>
  <% end %>
  <div class="event-name-data">
    <h1><%= event.title %></h1>
    <p class="description"><%= event.description %></p>
  </div>
</div>


