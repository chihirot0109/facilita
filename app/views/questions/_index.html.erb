<div class="container">
  <h1>Questions</h1>
  <div id="questions">
    <% event.questions.each do |question| %>
      <%= render "questions/question", question: question %>
    <% end %>
  </div>
  <%= simple_form_for([event, question], remote: true) do |f| %>
    <%= f.input :content %>
    <%= f.submit 'ask' %>
  <% end %>
</div>
