<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade <%= 'show active' if @tab == "comment" %>" id="pills-mobile-comment" role="tabpanel" aria-labelledby="pills-mobile-comment-tab">
    <%= render 'messages/index', event: event %>
  </div>
  <div class="tab-pane fade <%= 'show active' if @tab == "question" %>" id="pills-mobile-question" role="tabpanel" aria-labelledby="pills-mobile-question-tab">
    <%= render 'questions/index', event: event %>
  </div>
  <div class="tab-pane fade <%= 'show active' if @tab == "poll" %>" id="pills-mobile-poll" role="tabpanel" aria-labelledby="pills-mobile-poll-tab">
    <%= render 'polls/index', event: event %>
  </div>
  <div class="tab-pane fade <%= 'show active' if @tab == "feedback" %>" id="pills-mobile-feedback" role="tabpanel" aria-labelledby="pills-mobile-feedback-tab">
    <%= render 'feedbacks/new', event: event %>
  </div>
</div>
<div id="pills-tab-around">
  <ul class="nav nav-pills mt-3 justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link <%= 'active' if @tab == "comment" %>" id="pills-mobile-comment-tab" data-toggle="pill" href="#pills-mobile-comment" role="tab" aria-controls="pills-mobile-comment" aria-selected="true">
        <i class="fas fa-comments fa-lg"></i>
      </a>
      <p class=center>Chat</p>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if @tab == "question" %>" id="pills-mobile-question-tab" data-toggle="pill" href="#pills-mobile-question" role="tab" aria-controls="pills-mobile-question" aria-selected="false">
        <i class="fas fa-question-circle fa-lg"></i>
      </a>
      <p class="center">Q&A</p>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if @tab == "poll" %>" id="pills-mobile-poll-tab" data-toggle="pill" href="#pills-mobile-poll" role="tab" aria-controls="pills-mobile-poll" aria-selected="false">
        <i class="fas fa-poll fa-lg"></i>
      </a>
      <p class="center">Poll</p>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= 'active' if @tab == "feedback" %>" id="pills-mobile-feedback-tab" data-toggle="pill" href="#pills-mobile-feedback" role="tab" aria-controls="pills-mobile-feedback" aria-selected="false">
        <i class="fas fa-envelope-open-text fa-lg"></i>
      </a>
      <p class="center">Feedback</p>
    </li>
  </ul>
</div>
