<h1 class="center text-space-around">Feedbacks from your audience</h1>
<div class="container center form-container">
  <% @event.feedbacks.each do |feedback| %>
    <div class="d-flex justify-content-between align-items-center">
      <div class="feedback-card">
        <p><em><%= feedback.comment %></em></p>
      </div>
      <div>
        <% feedback.rating.times do %>
          <i class="fas fa-star fa-xs" id="rating"></i>
        <% end %>
        <p>By <%= feedback.user.first_name %> <%= feedback.user.last_name %></p>
      </div>
    </div>
  <% end %>
  <%= link_to "Back to summary", event_summary_path(@event), class: "btn btn-outline-danger" %>
</div>


